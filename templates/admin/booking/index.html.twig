{% extends 'admin/base.html.twig' %}

{% block title %}Administration des réservations{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Gestion des réservations</h1>
        {{ pagination.display() }}
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Visiteur</th>
                <th>Annonce</th>
                <th>Montant</th>
                <th>Actions</th>
            </tr>
            </thead>

            <tbody>
            {% for booking in pagination.data %}
                <tr>
                    <td>{{ booking.id }}</td>
                    <td>{{ booking.createAt|date('d/m/Y H:i') }}</td>
                    <td>
                        <img src="{{ booking.booker.picture }}" alt="" class="avatar avatar-micro">
                        {{ booking.booker.fullName }}
                    </td>
                    <td>{{ booking.ad.title }}</td>
                    <td>{{ booking.amount }}&euro;</td>
                    <td>
                        <a href="{{ path('admin_booking_edit', {'id': booking.id}) }}" class="btn btn-primary"><i
                                    class="fas fa-pen"></i></a>
                        <a href="{{ path('admin_booking_delete', {'id': booking.id}) }}" class="btn btn-danger"><i
                                    class="fas fa-trash"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {{ pagination.display() }}
    </div>
{% endblock %}
